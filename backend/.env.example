# backend/.env.example - Copy this to .env and fill in your values
PYTHONUNBUFFERED=1 # For Docker/uvicorn logging
PROJECT_NAME="Shared Shopping List API"
API_V1_STR="/api/v1"

# Server Configuration
PORT=8005
HOST=0.0.0.0

# PostgreSQL
POSTGRES_SERVER=localhost
POSTGRES_USER=familycart
POSTGRES_PASSWORD=changeme
POSTGRES_DB=familycart
POSTGRES_PORT=5432
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_SERVER}:${POSTGRES_PORT}/${POSTGRES_DB}

# FastAPI Users & JWT
# Generate a strong random key, at least 32 characters long
SECRET_KEY=changeme_use_openssl_rand_base64_32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# OAuth - Google (optional)
GOOGLE_OAUTH_CLIENT_ID=
GOOGLE_OAUTH_CLIENT_SECRET=

# OAuth - Apple (optional)
APPLE_OAUTH_CLIENT_ID=
APPLE_OAUTH_TEAM_ID=
APPLE_OAUTH_KEY_ID=
APPLE_OAUTH_PRIVATE_KEY=

# Email Configuration
# Provider options: console (development), brevo (production), smtp (custom)
EMAIL_PROVIDER=console
FROM_EMAIL=noreply@familycart.app
FRONTEND_URL=http://localhost:3000

# Brevo (Sendinblue) SMTP Configuration (when EMAIL_PROVIDER=brevo)
# Free tier: 300 emails/day - Sign up at https://www.brevo.com/
BREVO_SMTP_HOST=smtp-relay.brevo.com
BREVO_SMTP_PORT=587
BREVO_SMTP_USER=your-brevo-login-email@example.com
BREVO_SMTP_PASSWORD=your-brevo-smtp-key

# Generic SMTP Configuration (when EMAIL_PROVIDER=smtp)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-smtp-username
SMTP_PASSWORD=your-smtp-password
SMTP_USE_TLS=false
SMTP_START_TLS=true

# Email Token Expiration (in seconds)
VERIFICATION_TOKEN_LIFETIME_SECONDS=172800  # 48 hours
RESET_PASSWORD_TOKEN_LIFETIME_SECONDS=3600  # 1 hour
INVITATION_TOKEN_LIFETIME_SECONDS=604800    # 7 days
