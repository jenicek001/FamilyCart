# UAT Environment Configuration
# Copy this to .env in your UAT deployment directory

# Database Configuration
UAT_DB_PASSWORD=your_secure_uat_db_password_here
POSTGRES_DB=familycart_uat
POSTGRES_USER=familycart_uat
POSTGRES_SERVER=uat-db
POSTGRES_PORT=5432

# Redis Configuration  
UAT_REDIS_PASSWORD=your_secure_uat_redis_password_here
REDIS_HOST=uat-redis
REDIS_PORT=6379

# Backend Security
UAT_SECRET_KEY=your_secure_uat_secret_key_minimum_32_characters_here
UAT_TOKEN_EXPIRE_MINUTES=60

# Domain Configuration
UAT_ALLOWED_HOSTS=localhost,127.0.0.1,uat.familycart.local
UAT_WEBSOCKET_ORIGINS=http://localhost:3001,https://uat.familycart.local

# AI Configuration (optional - use same keys as production or separate test keys)
GEMINI_API_KEY=your_gemini_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# Application Configuration
UAT_APP_VERSION=latest
UAT_DEBUG_PANEL=true
UAT_PERF_MONITORING=true

# Monitoring Configuration (for monitoring profile)
GRAFANA_PASSWORD=your_secure_grafana_password_here

# SSL Configuration
UAT_SSL_CERT_PATH=/etc/nginx/ssl/uat.familycart.local.crt
UAT_SSL_KEY_PATH=/etc/nginx/ssl/uat.familycart.local.key

# Resource Monitoring Thresholds
UAT_CPU_ALERT_THRESHOLD=80
UAT_MEMORY_ALERT_THRESHOLD=85
UAT_DISK_ALERT_THRESHOLD=90

# Backup Configuration
UAT_BACKUP_RETENTION_DAYS=7
UAT_BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM

# Feature Flags for UAT Testing
UAT_ENABLE_NEW_FEATURES=true
UAT_ENABLE_EXPERIMENTAL_AI=false
UAT_ENABLE_DEBUG_LOGGING=true

# Load Testing Configuration
UAT_MAX_CONCURRENT_USERS=50
UAT_LOAD_TEST_DURATION=300  # 5 minutes
UAT_PERFORMANCE_BASELINE_RESPONSE_TIME=200  # milliseconds