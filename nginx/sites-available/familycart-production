# FamilyCart Production site configuration
# File: /etc/nginx/sites-available/familycart-production
# Based on: UAT config + NGINX best practices + 2025 security standards

# Upstream definitions with keepalive for performance
upstream familycart_backend {
    server 127.0.0.1:8000;
    keepalive 32;
}

upstream familycart_frontend {
    server 127.0.0.1:3000;
    keepalive 32;
}

# HTTP to HTTPS redirect for familycart.app
server {
    listen 80;
    listen [::]:80;
    server_name familycart.app www.familycart.app;
    
    # Health check endpoint (no redirect for monitoring)
    location /health {
        access_log off;
        return 200 "FamilyCart Production HTTP Healthy\n";
        add_header Content-Type text/plain;
    }
    
    # Redirect all other traffic to HTTPS
    location / {
        return 301 https://$server_name$request_uri;
    }
}

# HTTP to HTTPS redirect for redirect domains
server {
    listen 80;
    listen [::]:80;
    server_name familycart.cz www.familycart.cz
                familycart.eu www.familycart.eu
                nakoupit.app www.nakoupit.app
                nakoupit.com www.nakoupit.com;
    
    # Redirect to primary domain (familycart.app)
    return 301 https://familycart.app$request_uri;
}

# HTTPS redirect for redirect domains
server {
    listen 443 ssl;
    listen [::]:443 ssl;
    http2 on;
    server_name familycart.cz www.familycart.cz
                familycart.eu www.familycart.eu
                nakoupit.app www.nakoupit.app
                nakoupit.com www.nakoupit.com;

    # Cloudflare Origin Certificate (covers all domains)
    ssl_certificate /etc/nginx/ssl/cloudflare/origin-cert.pem;
    ssl_certificate_key /etc/nginx/ssl/cloudflare/origin-key.pem;
    
    # Include common SSL settings
    include /etc/nginx/conf.d/ssl-common.conf;
    
    # Include CloudFlare real IP configuration  
    include /etc/nginx/conf.d/cloudflare-realip.conf;
    
    # Redirect to primary domain
    return 301 https://familycart.app$request_uri;
}

# HTTPS server for FamilyCart Production (familycart.app)
server {
    listen 443 ssl;
    listen [::]:443 ssl;
    http2 on;
    server_name familycart.app www.familycart.app;

    # Cloudflare Origin Certificate
    ssl_certificate /etc/nginx/ssl/cloudflare/origin-cert.pem;
    ssl_certificate_key /etc/nginx/ssl/cloudflare/origin-key.pem;
    
    # Include common SSL settings
    include /etc/nginx/conf.d/ssl-common.conf;
    
    # Include CloudFlare real IP configuration  
    include /etc/nginx/conf.d/cloudflare-realip.conf;
    
    # Security headers (2025 best practices)
    # X-Frame-Options: Prevent clickjacking attacks
    add_header X-Frame-Options DENY always;
    
    # X-Content-Type-Options: Prevent MIME type sniffing
    add_header X-Content-Type-Options nosniff always;
    
    # X-XSS-Protection: Enable browser XSS filter (legacy browsers)
    add_header X-XSS-Protection "1; mode=block" always;
    
    # Referrer-Policy: Control referrer information
    add_header Referrer-Policy "strict-origin-when-cross-origin" always;
    
    # Content-Security-Policy: Restrict resource loading (aligned with UAT config + Google Fonts)
    add_header Content-Security-Policy "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; img-src 'self' data: https:; connect-src 'self' wss: https:; font-src 'self' data: https://fonts.gstatic.com https://fonts.googleapis.com; object-src 'none'; base-uri 'self'; form-action 'self';" always;
    
    # HSTS: Force HTTPS for 1 year, include subdomains, preload ready
    add_header Strict-Transport-Security "max-age=31536000; includeSubDomains; preload" always;
    
    # Permissions-Policy: Restrict browser features (2025 standard)
    add_header Permissions-Policy "camera=(), microphone=(), geolocation=()" always;

    # Dedicated logs for FamilyCart Production
    access_log /var/log/nginx/familycart-production.access.log main;
    error_log /var/log/nginx/familycart-production.error.log;

    # WebSocket endpoint for real-time updates (MUST come before /api/ location to match first)
    location /api/v1/ws/ {
        proxy_pass http://familycart_backend;
        
        # WebSocket specific configuration
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection $connection_upgrade;
        
        # Standard proxy headers
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        
        # WebSocket timeouts (24 hours for long-lived connections)
        proxy_read_timeout 86400s;
        proxy_send_timeout 86400s;
        proxy_connect_timeout 10s;
        
        # Disable buffering for real-time data
        proxy_buffering off;
        proxy_request_buffering off;
    }

    # API endpoints with rate limiting and proper proxy configuration
    location /api/ {
        limit_req zone=api burst=20 nodelay;
        
        # No trailing slash - preserves backend path structure
        proxy_pass http://familycart_backend;
        
        # Standard proxy headers
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        
        # API-specific timeouts
        proxy_connect_timeout 10s;
        proxy_send_timeout 30s;
        proxy_read_timeout 30s;
        
        # Enable keepalive connections for better performance
        proxy_set_header Connection "Keep-Alive";
        proxy_http_version 1.1;
        
        # CORS headers for production
        add_header Access-Control-Allow-Origin "https://familycart.app" always;
        add_header Access-Control-Allow-Methods "GET, POST, PUT, DELETE, OPTIONS" always;
        add_header Access-Control-Allow-Headers "Accept, Authorization, Cache-Control, Content-Type, DNT, If-Modified-Since, Keep-Alive, Origin, User-Agent, X-Requested-With" always;
        add_header Access-Control-Allow-Credentials true always;
        
        # Handle preflight requests efficiently
        if ($request_method = 'OPTIONS') {
            add_header Access-Control-Max-Age 86400;  # Cache preflight for 24 hours
            return 204;
        }
    }

    # WebSocket fallback endpoint (if using /ws directly)
    location /ws {
        proxy_pass http://familycart_backend/ws;
        
        # WebSocket specific configuration
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection $connection_upgrade;
        
        # Standard proxy headers
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        
        # WebSocket timeouts
        proxy_read_timeout 86400s;
        proxy_send_timeout 86400s;
        proxy_connect_timeout 10s;
        
        # Disable buffering
        proxy_buffering off;
        proxy_request_buffering off;
    }

    # Frontend application with rate limiting
    location / {
        limit_req zone=web burst=50 nodelay;
        
        # No trailing slash - preserves path structure (aligned with UAT config)
        proxy_pass http://familycart_frontend;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        
        # Frontend timeouts
        proxy_connect_timeout 5s;
        proxy_send_timeout 60s;
        proxy_read_timeout 60s;
        
        # Cache static assets aggressively (nested location for proper precedence)
        location ~* \.(js|css|png|jpg|jpeg|gif|ico|svg|woff|woff2|ttf|eot)$ {
            proxy_pass http://familycart_frontend;
            proxy_set_header Host $host;
            expires 1y;
            add_header Cache-Control "public, immutable";
            access_log off;
        }
    }

    # Health check endpoint
    location /health {
        access_log off;
        return 200 "FamilyCart Production HTTPS Healthy\n";
        add_header Content-Type text/plain;
    }

    # Block access to sensitive files
    location ~ /\. {
        deny all;
        access_log off;
        log_not_found off;
    }
    
    location ~ \.(env|log|sql|bak)$ {
        deny all;
        access_log off;
        log_not_found off;
    }
}
